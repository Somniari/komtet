{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"outDir": "build",
		"rootDir": "src",
		"strictNullChecks": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
